package execloop;

import java.util.Scanner;
public class ExecIntervaloNumber {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		boolean numberValid = false;
		
		int num1, num2;
		int soma = 0;
		
		System.out.println("Digite 1º número: ");
		num1 = sc.nextInt();
		
		do {
			System.out.println("Digite 2º número: ");
			num2 = sc.nextInt();
			
			
			if (num2 > num1) {
				numberValid = true;
			}
			else {
				System.out.println("O 2º número não pode ser menor ou igual que o 1º número.");
				System.out.println();
			}
			
		}
		
		while (!numberValid);
		
		for (int i = num1+1; i <= num2-1; i++) {
			soma += i;
			System.out.print(" " + i);
		}
		System.out.println();
		System.out.println("A soma dos números entre 1º número (" + num1 + ") até o 2º número (" +num2 + ") é " +soma + ".");

	}

}

